    android:layout_height="match_parent" android:padding="10dp" >

    <TextView
        android:layout_width="wrap_content"

        android:layout_height="wrap_content" android:text="Neki materijal"
        android:id="@+id/txtMaterijalNaziv" android:textSize="20dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" android:text="Kupi"
        android:textSize="20dp"
        android:textColor="#cc1f84cc"
        android:textStyle="bold|italic"
