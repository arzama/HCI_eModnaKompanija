<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:padding="10dp"  >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingRight="7dp"
            android:id="@+id/pomMat"
            android:text="Materijal:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="test"
            android:layout_toRightOf="@+id/pomMat"
            android:layout_alignBaseline="@+id/pomMat"
            android:id="@+id/txtMaterijal"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCijenaMaterijala"
            android:layout_alignBaseline="@id/pomMat"
            android:text="500 KM"
            android:textSize="17dp"
            android:layout_alignParentRight="true"/>







    </RelativeLayout>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerKolicina"></Spinner>



    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Dodaj u korpu"
        android:id="@+id/btnNaruci_materijal"

        android:layout_centerHorizontal="true"
        android:textSize="15dp"
     />
</LinearLayout>