<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/konacn222"
    tools:showIn="@layout/activity_pocetna"
    tools:context="com.modnakompanija.hci_modnakompanija.PocetnaActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naslov_pocetna"
        android:textAlignment="center"
        android:textColor="#0a0a0a"
        android:text="Welcome to eModnaKompanija"
        android:textSize="40sp"

        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <Button
        android:layout_width="190dp"
        android:layout_height="80dp" android:text="Registracija"
        android:textSize="25dp"
        android:id="@+id/btnRegistracija_pocetna"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="83dp"
        android:background="#ffffff"
        />

    <Button
        android:layout_marginBottom="83dp"
        android:layout_width="190dp"
        android:layout_height="80dp"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/btnRegistracija_pocetna"
        android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnPrijava_pocetna" android:text="Prijava" />
</RelativeLayout>