<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:padding="10dp" android:paddingRight="25dp" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtProizvod"
        android:text="test"
        android:textSize="17dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp" android:text="500 KM"
        android:id="@+id/txtProizvodCijena"
        android:layout_alignBaseline="@+id/txtProizvod"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kolicina: "
        android:textSize="17dp"
        android:paddingTop="7dp"
        android:id="@+id/pomTekst"
        android:layout_below="@+id/txtProizvod"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp" android:text="5"
        android:id="@+id/txtKolicinaProizvod"
        android:layout_alignBaseline="@id/pomTekst" android:layout_alignParentRight="true"/>

</RelativeLayout>