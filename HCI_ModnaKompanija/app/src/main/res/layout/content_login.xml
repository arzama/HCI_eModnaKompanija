<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/colorPozadina"
    tools:showIn="@layout/activity_login"
    tools:context="com.modnakompanija.hci_modnakompanija.Area_Autentifikacija.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/naslov"
        android:textAlignment="center"
        android:text="eModnaKompanija"
        android:textSize="40sp"
        android:textColor="@color/colorNaslov"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prijavi se"
        android:id="@+id/btnPrijava"
        android:layout_below="@+id/txtLozinka"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:textSize="40dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:id="@+id/txtKorisnickoIme"
        android:layout_below="@+id/naslov"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Korisnicko ime"
        android:textSize="30dp"

        android:text="arza" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/txtKorisnickoIme"
        android:inputType="textPassword"


        android:id="@+id/txtLozinka"
        android:textSize="30dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Lozinka"
        android:text="arza" />


</RelativeLayout>
